##aliases
if [ $MACOSX ]; then
  alias ls='ls -G'
elif [ $CYGWIN ]; then
  #cygwin stat is very slow, so don't show color if there are more than 150 files
  function ls_moderate() {
    num=`command ls -1 "$@" 2> /dev/null | wc -l`
    if [[ $num -gt 150 ]]; then
      # native
      command ls "$@"
    else
      # colored
      command ls --color "$@"
    fi
  }
  alias ls='ls_moderate'
else
  alias ls='ls --color'
fi
