# http://nion.modprobe.de/blog/archives/569-colored-manpages.html
alias man='TERMINFO=~/.terminfo/ LESS=C TERM=mostlike PAGER=less man'


# mkcd = mkdir + cd
function mkcd(){
  eval dir=\$\{$#\}
  mkdir $@ && cd $dir
}


