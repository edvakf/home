## options

# compacked complete list display
#
[[ $OSTYPE = "darwin10.0" || $OSTYPE = "darwin11.0" || $OSTYPE = "darwin12.0" || $OSTYPE = "darwin13.0" ]] && [[ $MACOSX = '' ]] && MACOSX='yes'
[[ $OSTYPE = "cygwin" ]] && [[ $CYGWIN = '' ]] && CYGWIN='yes'

# completion list item width equal to 'ls' item width
[ $MACOSX ] && setopt no_list_packed || setopt list_packed

## paths
if [ $MACOSX ]; then
  export PATH=$PATH:/usr/local/bin
fi

export PATH=$HOME/bin:$PATH

export LC_ALL=en_US.UTF-8


##aliases
if [ $MACOSX ]; then
  alias ls='ls -G'
else
  alias ls='ls --color'
fi
alias ll='ls -l'
alias lh='ls -lh'
alias la='ls -a'

alias g='git'
alias gs='git status'
alias s='screen'

# global alias - works not only as the first word of command
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'

alias cd..='cd ..'
alias cd-='cd -'

alias -g G='| grep'
alias -g L='| less'

# without this, git log, git diff, etc. don't use alternate screen
#alias git='LESS=FRS git'


if [ $MACOSX ]; then
